html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= "Quizzer login"
        style
            include main.css
            include start.css
            include quiz.css
            include results.css
            include login.css
            include reset_password.css
    body
        include topbar
        
        a(href="/quizzes" class="back-button") Back

        div(id="login-form")
            form(action="/resetpassword" method="POST")
                p(class="big-font")= "New password:"
                input(type="password" name="password1" placeholder="new password")
                div
                input(type="password" name="password2" placeholder="retype new password")
                div
                p(class='password-no-match') Passwords do not match
                input(type="submit" value="Change" class="dark-button")

                script(src='/pass_reset.js')