html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= "Quizzer Quiz " + quiz_id + " results"
        style
            include main.css
            include start.css
            include quiz.css
            include results.css

    body
        include topbar
        a(href="/quizzes" class="back-button") Back
        div(id="results-view")
            div(class="result-time")
                div= "Result: "
                span(id="result-time")= total_time
            
            div(id="answer-summary")
                h3 Answers:
                table(cellspacing="0")
                    tr
                        th Task
                        th Answer
                        th Correct
                        th Penalty
                        th Time
                        th Average User Time
                    each result_data in results_data
                        if result_data.answer_good
                            tr(class="good-answer")
                                td= result_data.task_text
                                td= result_data.task_answer
                                td yes
                                td -
                                td= result_data.answer_time
                                td= result_data.avg_time
                        else
                            tr(class="bad-answer")
                                td= result_data.task_text
                                td= result_data.task_answer
                                td= result_data.task_correct_answer
                                td= '+' + result_data.penalty + 's'
                                td= result_data.answer_time
                                td= result_data.avg_time
            div
            div(id="leaderboard")
                h2 Leaderboard:
                table(cellspacing="0")
                    tr
                        th Time
                        th Username

                    each leaderboard_result in leaderboard_results
                        tr
                            td= leaderboard_result[0]
                            td= leaderboard_result[1]
